@{
    ViewBag.Title = "Recepcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>

<div class="card">
    <div class="card-body">
        <div class="form-group row">
            <label for="cboCategoria" class="col-sm-2 col-form-label">Seleccionar categoría:</label>
            <div class="col-sm-4">
                <select class="form-control" id="cboCategoria">
                    <option value="">Haga su selección</option>
                    <option value="Todas">Todas</option>
                    <option value="Suite">Suite</option>
                    <option value="Suite plus">Suite plus</option>
                    <option value="Habitacion familiar">Habitacion familiar</option>
                    <option value="Habitacion familiar plus">Habitacion familiar plus</option>
                    <option value="Habitacion estandar">Habitacion estandar</option>
                    <option value="Habitacion estandar plus">Habitacion estandar plus</option>
                </select>
            </div>
        </div>
        <hr />
        <div id="habitaciones" class="row">
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
@section scripts{

    <script>
        var tabladata;

        $(document).ready(function () {

            $("#cboCategoria").on("change", function () {
                var tipoCategoria = $(this).val();
                listarHabitaciones(tipoCategoria);
            });

            // Función para listar las habitaciones según el tipo de categoría seleccionado
            function listarHabitaciones(tipoCategoria) {
                $.ajax({
                    url: '@Url.Action("ListarHabitacionR", "Gestion")',
                    type: "GET",
                    data: { tipoCategoria: tipoCategoria },
                    dataType: "json",
                    success: function (data) {
                        console.log(data);
                        $("#habitaciones").html("");
                        $.each(data.data, function (index, value) {
                            var clase = "";
                            var icono = "";
                            switch (value.idEstadoHabitacion) {
                                case 1:
                                    clase = "success";
                                    icono = "fas fa-box";
                                    break;
                                case 2:
                                    clase = "danger";
                                    icono = "fas fa-bed";
                                    break;
                                default:
                                    clase = "info";
                                    icono = "fas fa-air-freshener";
                            }

                            $("<div>").addClass("col-xl-3 col-md-6 mb-4").append(
                                $("<div>").addClass("card border-" + clase + " rounded-0").append(
                                    $("<div>").addClass("card-body").append(
                                        $("<div>").addClass("row no-gutters align-items-center").append(
                                            $("<div>").addClass("col mr-2").append(
                                                $("<div>").addClass("h5 mb-0 font-weight-bold text-gray-800").text("NRO: " + value.habitacionID),
                                                $("<div>").addClass("text-xs font-weight-bold text-" + clase + " text-uppercase mb-1 mt-1").text("Categoria: " + value.tipo)
                                            ),
                                            $("<div>").addClass("col-auto").append(
                                                $("<i>").addClass(icono + " fa-2x text-" + clase)
                                            )
                                        )
                                    ),
                                    $("<div>").addClass("card-footer d-flex bg-" + clase + " align-items-center justify-content-between rounded-0").append(
                                        $("<a>").addClass("small text-white stretched-link text-uppercase font-weight-bold select-habitacion").text("Gestionar").data("info", JSON.stringify({ idhabitacion: value.habitacionID, idestadohabitacion: value.idEstadoHabitacion })),
                                        $("<div>").addClass("small text-white").append($("<i>").addClass("fas fa-angle-right"))
                                    )  
                                )
                            ).appendTo("#habitaciones");
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }
        });


        $(document).on('click', '.select-habitacion', function (event) {
            var json = JSON.parse($(this).data("info"))
            if (json.idestadohabitacion == 1) {
                window.location.href = "@Url.Action("RecepcionRegistro", "Gestion")" + "?idhabitacion=" + json.idhabitacion
            } else if (json.idestadohabitacion == 2) {
                window.location.href = "@Url.Action("DetalleRecepcion", "Gestion")" + "?idhabitacion=" + json.idhabitacion
            } else if (json.idestadohabitacion == 3) {

                swal({
                    title: "Terminar Limpieza",
                    text: "A continuación el estado de la habitación será DISPONIBLE",
                    icon: "warning",
                    buttons: ["Cancelar", "Aceptar"]
                })
                    .then((resultado) => {
                        if (resultado) {
                            jQuery.ajax({
                                url: '@Url.Action("ActualizarEstadoHabitacion", "Gestion")' + "?habitacionID=" + json.idhabitacion + "&idEstadoHabitacion=1",
                                type: "GET",
                                data: null,
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (data) {
                                    $("#cbopiso").trigger("change");
                                },
                                error: function (error) {
                                    console.log(error)
                                }
                            });
                        }
                    });

            }
            console.log(json);

        });

    </script>

}
