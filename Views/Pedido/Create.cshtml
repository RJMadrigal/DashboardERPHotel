@using System.Security.Claims;
@model web_hoteldemo.Models.Pedido

@{
    ViewData["Title"] = "Crear Pedido";
}

<h2>Crear Pedido</h2>

<form asp-action="Create" asp-controller="Pedido" method="post">
    <div class="form-group">
        <label asp-for="inventarioID" class="control-label">Producto</label>
        <select id="productoDropdown" asp-for="inventarioID" class="form-control">
            <option value="">Seleccione un producto</option>
            @if (ViewBag.ProductosInventario != null)
            {
                foreach (var producto in ViewBag.ProductosInventario)
                {
                    <option value="@producto.inventarioID">@producto.producto</option>
                }
            }
        </select>
        <span asp-validation-for="inventarioID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="producto" class="control-label">Producto</label>
        <input asp-for="producto" class="form-control" />
        <span asp-validation-for="producto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="detalle" class="control-label">Detalle</label>
        <input asp-for="detalle" class="form-control" />
        <span asp-validation-for="detalle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="cantidad" class="control-label">Cantidad</label>
        <input asp-for="cantidad" class="form-control" />
        <span asp-validation-for="cantidad" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="usuarioID" value="@User.FindFirstValue("usuarioID")" />
    <!-- Otros campos del formulario -->

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productoDropdown').change(function () {
                var selectedProductName = $(this).find('option:selected').text();
                $('#producto').val(selectedProductName);
            });
        });
    </script>
}